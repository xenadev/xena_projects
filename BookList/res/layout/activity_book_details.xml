<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookDetailsActivity" >

    <LinearLayout
        android:id="@+id/name_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_to_list"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name" />

        <TextView
            android:id="@+id/name_view"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/author_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_below="@+id/name_row" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/author" />

        <TextView
            android:id="@+id/author_view"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/evariant_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" 
        android:layout_below="@+id/author_row">

        <CheckBox
            android:id="@+id/evarient_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="false"
            android:text="@string/electronic_variant"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/genre_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" 
        android:layout_below="@+id/evariant_row">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/genre" />

        <TextView
            android:id="@+id/genre_view"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/publish_date_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_below="@+id/genre_row" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/publish_date" />

        <TextView
            android:id="@+id/publish_date_view"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.40" />
    </LinearLayout>

    <TextView
        android:id="@+id/back_to_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/list_title"
        android:textColor="#000000" />
    
    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/edit"
        android:textSize="12sp" />
    
     <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/delete"
        android:layout_alignParentRight="true"
        android:textSize="12sp" />

</RelativeLayout>