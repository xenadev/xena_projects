<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iteralab.booklist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="16" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.iteralab.booklist.BookListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iteralab.booklist.BookDetailsActivity"
            android:label="@string/title_activity_book_details" >
        </activity>

        <provider
            android:name="com.iteralab.db.BookProvider"
            android:authorities="com.iteralab.db.bookprovider" >
        </provider>
    </application>

</manifest>